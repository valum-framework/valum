#!/usr/bin/env python

def options(opt):
    opt.load('waf_unit_test')

def configure(cfg):
    cfg.load('glib2 waf_unit_test')
    cfg.check_cfg(package='gio-unix-2.0', uselib_store='GIO_UNIX', args='--cflags --libs')

def build(bld):
    bld.load('glib2')
    bld.program(
        features     = 'test',
        target       = 'legacy-test',
        source       = ['cgi-test.vala',
                        'chunked-encoder-test.vala',
                        'cookies-test.vala',
                        'decode-test.vala',
                        'fastcgi-test.vala',
                        'http-test.vala',
                        'negociate-test.vala',
                        'router-test.vala',
                        'route-test.vala',
                        'scgi-test.vala',
                        'server-sent-events-test.vala',
                        'subdomain-test.vala',
                        'tests.gresource.xml',
                        'tests.vala'],
        use          = 'valum',
        install_path = None)
    bld.program(
        features     = 'test',
        target       = 'basepath-test',
        source       = 'basepath-test.vala',
        use          = 'valum',
        install_path = None)
    bld.program(
        features     = 'test',
        target       = 'request-test',
        source       = 'request-test.vala',
        use          = 'vsgi-mock',
        install_path = None)
    bld.program(
        features     = 'test',
        packages     = 'gio-unix-2.0',
        target       = 'socket-listener-server-test',
        source       = 'socket-listener-server-test.vala',
        use          = 'vsgi GIO_UNIX',
        install_path = None)
    bld.program(
        features     = 'test',
        target       = 'fastcgi-server-test',
        source       = 'fastcgi-server-test.vala',
        use          = 'vsgi-fastcgi',
        install_path = None)
    from waflib.Tools import waf_unit_test
    bld.add_post_fun(waf_unit_test.summary)
    bld.add_post_fun(waf_unit_test.set_exit_code)
